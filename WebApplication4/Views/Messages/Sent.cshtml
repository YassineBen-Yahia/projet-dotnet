@model IEnumerable<WebApplication4.Models.Message>
@{
    ViewData["Title"] = "Sent Messages";
}

<!-- Page Header -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="section-title mb-1" style="text-align: left;">@ViewData["Title"]</h2>
        <p class="text-muted small mb-0">Messages you have sent to other users</p>
    </div>
    <a asp-action="Create" class="btn btn-primary shadow-sm">
        <i class="bi bi-plus-circle me-1"></i> New Message
    </a>
</div>

<!-- Tab Navigation -->
<nav class="request-tabs" role="tablist" aria-label="Message navigation">
    <a class="request-tab" role="tab" aria-selected="false" asp-action="Index">
        <i class="bi bi-inbox-fill"></i>
        <span>All Messages</span>
    </a>
    <a class="request-tab" role="tab" aria-selected="false" asp-action="Received">
        <i class="bi bi-arrow-down-circle"></i>
        <span>Received</span>
    </a>
    <a class="request-tab active" role="tab" aria-selected="true" asp-action="Sent">
        <i class="bi bi-arrow-up-circle"></i>
        <span>Sent</span>
    </a>
</nav>

<!-- Content -->
@if (!Model.Any())
{
    <div class="text-center py-5">
        <div class="mb-3">
            <i class="bi bi-send text-muted" style="font-size: 3rem; opacity: 0.4;"></i>
        </div>
        <h5 class="text-muted fw-normal">No sent messages</h5>
        <p class="text-muted small">Messages you send will appear here.</p>
        <a asp-action="Create" class="btn btn-outline-primary btn-sm mt-2">
            <i class="bi bi-plus-circle me-1"></i> Send a Message
        </a>
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-modern align-middle">
            <thead>
                <tr>
                    <th>To</th>
                    <th>Subject</th>
                    <th>Date</th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var m in Model)
                {
                    <tr>
                        <td>
                            <div class="d-flex align-items-center">
                                <div class="property-icon-cell me-3" style="background-color: rgba(51, 120, 180, 0.1); color: var(--secondary);">
                                    <i class="bi bi-person"></i>
                                </div>
                                <div>
                                    <div class="fw-bold text-dark">@m.ToUser?.FirstName @m.ToUser?.LastName</div>
                                    <div class="text-muted small">@m.ToUser?.Email</div>
                                </div>
                            </div>
                        </td>
                        <td>
                            <div class="fw-semibold text-dark text-truncate" style="max-width: 250px;">@m.Subject</div>
                        </td>
                        <td>
                            <span class="text-muted small">
                                <i class="bi bi-calendar3 me-1"></i>@m.SentAt.ToString("MMM dd, HH:mm")
                            </span>
                        </td>
                        <td class="text-end">
                            <div class="actions-group justify-content-end">
                                <a asp-action="Details" asp-route-id="@m.Id" class="btn btn-outline-primary" title="Read">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <form asp-action="Delete" asp-route-id="@m.Id" method="post" class="d-inline" onsubmit="return confirm('Delete this message?');">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-outline-danger" title="Delete">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
