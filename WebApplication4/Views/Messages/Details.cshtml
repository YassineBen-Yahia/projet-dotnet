@model WebApplication4.Models.Message
@{
    ViewData["Title"] = "Message Details";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-envelope-open"></i> Message Details</h2>
        <a asp-action="Received" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to Inbox
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-light">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="mb-0">@Model.Subject</h5>
                <small class="text-muted">
                    <i class="bi bi-clock"></i> @Model.SentAt.ToString("MMM dd, yyyy hh:mm tt")
                </small>
            </div>
        </div>
        <div class="card-body">
            <div class="d-flex align-items-center mb-4 pb-3 border-bottom">
                <div class="bg-primary text-white rounded-circle d-inline-flex align-items-center justify-content-center me-3" style="width: 50px; height: 50px; font-size: 1.2rem;">
                    @(Model.FromUser?.FirstName?.Substring(0, 1))@(Model.FromUser?.LastName?.Substring(0, 1))
                </div>
                <div>
                    <h6 class="mb-0">
                        From: <strong>@Model.FromUser?.FirstName @Model.FromUser?.LastName</strong>
                    </h6>
                    <a href="mailto:@Model.FromUser?.Email" class="text-decoration-none text-muted">@Model.FromUser?.Email</a>
                </div>
            </div>

            <div class="message-content mb-4" style="white-space: pre-wrap;">
                @Model.Body
            </div>
        </div>
        <div class="card-footer bg-transparent border-top-0 pb-3">
            <div class="d-flex justify-content-end gap-2">
                <a asp-action="Reply" asp-route-id="@Model.Id" class="btn btn-success">
                    <i class="bi bi-reply"></i> Reply
                </a>
                <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this message?');">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Delete
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
