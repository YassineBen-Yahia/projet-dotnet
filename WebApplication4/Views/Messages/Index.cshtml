@model IEnumerable<WebApplication4.Models.Message>
@{
    var isAdmin = User.IsInRole("Admin");
    ViewData["Title"] = isAdmin ? "Messages Monitoring" : "My Messages";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-envelope"></i> @ViewData["Title"]</h2>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> New Message
    </a>
</div>

@if (!isAdmin)
{
    <ul class="nav nav-tabs mb-4">
        <li class="nav-item">
            <a class="nav-link active" asp-action="Index">All Messages</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-action="Received">Received</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-action="Sent">Sent</a>
        </li>
    </ul>
}

@if (!Model.Any())
{
    <div class="alert alert-info text-center">
        No messages found.
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
            <thead>
                <tr>
                    @if (isAdmin)
                    {
                        <th>From</th>
                        <th>To</th>
                    }
                    else
                    {
                        <th>User</th>
                        <th>Type</th>
                    }
                    <th>Subject</th>
                    <th>Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var m in Model)
                {
                    var currentUserId = User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;
                    var isReceived = m.ToUserId == currentUserId;
                    
                    <tr>
                        @if (isAdmin)
                        {
                            <td>@m.FromUser?.FirstName @m.FromUser?.LastName</td>
                            <td>@m.ToUser?.FirstName @m.ToUser?.LastName</td>
                        }
                        else
                        {
                            <td>
                                @(isReceived ? m.FromUser?.FirstName + " " + m.FromUser?.LastName : m.ToUser?.FirstName + " " + m.ToUser?.LastName)
                            </td>
                            <td>
                                <span class="badge bg-@(isReceived ? "success" : "primary")">
                                    @(isReceived ? "Received" : "Sent")
                                </span>
                            </td>
                        }
                        <td class="text-truncate" style="max-width: 200px;">@m.Subject</td>
                        <td>@m.SentAt.ToString("g")</td>
                        <td>
                            <div class="btn-group btn-group-sm">
                                <a asp-action="Details" asp-route-id="@m.Id" class="btn btn-outline-info">
                                    <i class="bi bi-eye"></i>
                                </a>
                                @if (!isAdmin && isReceived)
                                {
                                    <a asp-action="Reply" asp-route-id="@m.Id" class="btn btn-outline-success">
                                        <i class="bi bi-reply"></i>
                                    </a>
                                }
                                <form asp-action="Delete" asp-route-id="@m.Id" method="post" class="d-inline" onsubmit="return confirm('Delete this message?');">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-outline-danger">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
