@model IEnumerable<WebApplication4.Models.Request>
@{
    ViewData["Title"] = "My Requests";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-clipboard-check"></i> My Requests</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> New Request
        </a>
    </div>

    <!-- Navigation Tabs -->
    <ul class="nav nav-tabs mb-4">
        <li class="nav-item">
            <a class="nav-link active" asp-action="Index">
                <i class="bi bi-clipboard"></i> My Requests
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-action="MyPropertyRequests">
                <i class="bi bi-inbox"></i> Property Requests
            </a>
        </li>
    </ul>

    @if (Model.Any())
    {
        <div class="card shadow-sm">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Property</th>
                            <th>Notes</th>
                            <th>Status</th>
                            <th>Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var request in Model)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        @if (request.Property?.Images != null && request.Property.Images.Any())
                                        {
                                            <img src="@request.Property.Images.First().Url" alt="@request.Property.Title" class="rounded me-2" style="width: 60px; height: 60px; object-fit: cover;" />
                                        }
                                        else
                                        {
                                            <div class="bg-secondary rounded me-2 d-flex align-items-center justify-content-center text-white" style="width: 60px; height: 60px;">
                                                <i class="bi bi-house-door"></i>
                                            </div>
                                        }
                                        <div>
                                            <strong>@request.Property?.Title</strong><br />
                                            <small class="text-muted">
                                                <i class="bi bi-geo-alt"></i> @(request.Property?.Address ?? "N/A")
                                            </small><br />
                                            <small class="text-primary fw-bold">@request.Property?.Price.ToString("C")</small>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <span class="text-muted">
                                        @(request.Notes.Length > 60 ? request.Notes.Substring(0, 60) + "..." : request.Notes)
                                    </span>
                                </td>
                                <td>
                                    <span class="badge bg-@(request.Status == "Approved" ? "success" : request.Status == "Rejected" ? "danger" : "warning") fs-6">
                                        @request.Status
                                    </span>
                                </td>
                                <td>
                                    <i class="bi bi-clock"></i> @request.CreatedAt.ToString("MMM dd, yyyy")
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@request.Id" class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-eye"></i> View
                                        </a>
                                        <form asp-action="Delete" asp-route-id="@request.Id" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this request?');">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-sm btn-outline-danger">
                                                <i class="bi bi-trash"></i> Delete
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <div class="mt-3 text-muted">
            <i class="bi bi-info-circle"></i> Showing @Model.Count() request(s)
        </div>
    }
    else
    {
        <div class="alert alert-info text-center" role="alert">
            <i class="bi bi-clipboard" style="font-size: 3rem;"></i>
            <h4 class="mt-3">No Requests Yet</h4>
            <p>You haven't made any property requests yet.</p>
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create Your First Request
            </a>
        </div>
    }
</div>

