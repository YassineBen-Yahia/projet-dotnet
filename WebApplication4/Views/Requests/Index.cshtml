@model IEnumerable<WebApplication4.Models.Request>
@{
    var isAdmin = User.IsInRole("Admin");
    ViewData["Title"] = isAdmin ? "Requests Management" : "My Requests";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>@ViewData["Title"]</h2>
    @if (!isAdmin)
    {
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> New Request
        </a>
    }
</div>

@if (!isAdmin)
{
    <ul class="nav nav-tabs mb-4">
        <li class="nav-item">
            <a class="nav-link active" asp-action="Index">My Requests</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-action="MyPropertyRequests">Requests for My Properties</a>
        </li>
    </ul>
}

@if (!Model.Any())
{
    <div class="alert alert-info text-center">
        No requests found.
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
            <thead>
                <tr>
                    <th>Property</th>
                    @if (isAdmin)
                    {
                        <th>Requested By</th>
                    }
                    <th>Status</th>
                    <th>Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var r in Model)
                {
                    <tr>
                        <td>
                            <div class="fw-bold">@r.Property?.Title</div>
                            <div class="text-muted small">@r.Property?.Price.ToString("C")</div>
                        </td>
                        @if (isAdmin)
                        {
                            <td>
                                <div>@r.User?.FirstName @r.User?.LastName</div>
                                <div class="text-muted small">@r.User?.Email</div>
                            </td>
                        }
                        <td>
                            <span class="badge bg-@(r.Status == "Approved" ? "success" : r.Status == "Rejected" ? "danger" : "warning")">
                                @r.Status
                            </span>
                        </td>
                        <td>@r.CreatedAt.ToString("g")</td>
                        <td>
                            <div class="btn-group btn-group-sm">
                                <a asp-action="Details" asp-route-id="@r.Id" class="btn btn-outline-info" title="View">
                                    <i class="bi bi-eye"></i>
                                </a>
                                
                                @if (isAdmin && r.Status == "Pending")
                                {
                                    <form asp-action="UpdateStatus" asp-route-id="@r.Id" method="post" class="d-inline" onsubmit="return confirm('Approve this request?');">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="status" value="Approved" />
                                        <button type="submit" class="btn btn-outline-success">
                                            <i class="bi bi-check-lg"></i>
                                        </button>
                                    </form>
                                    <form asp-action="UpdateStatus" asp-route-id="@r.Id" method="post" class="d-inline" onsubmit="return confirm('Reject this request?');">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="status" value="Rejected" />
                                        <button type="submit" class="btn btn-outline-danger">
                                            <i class="bi bi-x-lg"></i>
                                        </button>
                                    </form>
                                }

                                @if (isAdmin || r.Status == "Pending")
                                {
                                    <form asp-action="Delete" asp-route-id="@r.Id" method="post" class="d-inline" onsubmit="return confirm('Delete this request?');">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-outline-danger">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                }
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
