@model WebApplication4.Models.Request
@{
    ViewData["Title"] = "Request Details";
    var currentUserId = User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;
    var isRequester = Model.UserId == currentUserId;
    var isPropertyOwner = Model.Property?.OwnerId == currentUserId;
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow-sm">
                <div class="card-header bg-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="mb-0">
                            <i class="bi bi-clipboard-check"></i> Request Details
                        </h4>
                        <a asp-action="Index" class="btn btn-sm btn-outline-secondary">
                            <i class="bi bi-arrow-left"></i> Back to Requests
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <!-- Status Badge -->
                    <div class="mb-4 text-center">
                        <span class="badge bg-@(Model.Status == "Approved" ? "success" : Model.Status == "Rejected" ? "danger" : "warning")" style="font-size: 1.2rem; padding: 0.5rem 1.5rem;">
                            @Model.Status
                        </span>
                    </div>

                    <!-- Property Information -->
                    <div class="card bg-light mb-4">
                        <div class="card-body">
                            <h5 class="card-title mb-3">
                                <i class="bi bi-house-door"></i> Property Details
                            </h5>
                            <div class="row">
                                <div class="col-md-4">
                                    @if (Model.Property?.Images != null && Model.Property.Images.Any())
                                    {
                                        <img src="@Model.Property.Images.First().Url" alt="@Model.Property.Title" class="img-fluid rounded" style="height: 200px; width: 100%; object-fit: cover;" />
                                    }
                                    else
                                    {
                                        <div class="bg-secondary rounded d-flex align-items-center justify-content-center text-white" style="height: 200px;">
                                            <i class="bi bi-house-door" style="font-size: 3rem;"></i>
                                        </div>
                                    }
                                </div>
                                <div class="col-md-8">
                                    <h4 class="mb-2">@Model.Property?.Title</h4>
                                    <p class="text-muted mb-2">
                                        <i class="bi bi-geo-alt"></i> @(Model.Property?.Address ?? "Location not specified")
                                    </p>
                                    <h3 class="text-primary mb-3">@Model.Property?.Price.ToString("C")</h3>
                                    <div class="row text-center">
                                        <div class="col-4">
                                            <i class="bi bi-door-closed text-primary"></i><br />
                                            <strong>@Model.Property?.Bedrooms</strong><br />
                                            <small class="text-muted">Bedrooms</small>
                                        </div>
                                        <div class="col-4">
                                            <i class="bi bi-droplet text-primary"></i><br />
                                            <strong>@Model.Property?.Bathrooms</strong><br />
                                            <small class="text-muted">Bathrooms</small>
                                        </div>
                                        <div class="col-4">
                                            <i class="bi bi-rulers text-primary"></i><br />
                                            <strong>@Model.Property?.Area</strong><br />
                                            <small class="text-muted">sq ft</small>
                                        </div>
                                    </div>
                                    <div class="mt-3">
                                        <a asp-controller="Properties" asp-action="Details" asp-route-id="@Model.PropertyId" class="btn btn-outline-primary btn-sm">
                                            <i class="bi bi-eye"></i> View Property Details
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <hr />

                    <!-- Requester Information -->
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <label class="text-muted small">Requester:</label>
                            <div class="d-flex align-items-center">
                                <div class="bg-success text-white rounded-circle d-inline-flex align-items-center justify-content-center me-2" style="width: 50px; height: 50px;">
                                    @(Model.User?.FirstName?.Substring(0, 1))@(Model.User?.LastName?.Substring(0, 1))
                                </div>
                                <div>
                                    <strong>@Model.User?.FirstName @Model.User?.LastName</strong><br/>
                                    <small class="text-muted">@Model.User?.Email</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label class="text-muted small">Request Date:</label>
                            <p class="mb-0">
                                <i class="bi bi-calendar-check"></i> @Model.CreatedAt.ToString("MMMM dd, yyyy")
                            </p>
                            <small class="text-muted">
                                <i class="bi bi-clock"></i> @Model.CreatedAt.ToString("hh:mm tt")
                            </small>
                        </div>
                    </div>

                    <hr />

                    <!-- Request Notes -->
                    <div class="mb-4">
                        <label class="text-muted small">Request Notes:</label>
                        <div class="p-3 bg-light rounded">
                            <p class="mb-0" style="white-space: pre-wrap;">@Model.Notes</p>
                        </div>
                    </div>

                    <hr />

                    <!-- Action Buttons -->
                    <div class="d-flex gap-2 flex-wrap">
                        @if ((isPropertyOwner || User.IsInRole("Admin")) && Model.Status == "Pending")
                        {
                            <form asp-action="UpdateStatus" asp-route-id="@Model.Id" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="status" value="Approved" />
                                <button type="submit" class="btn btn-success" onclick="return confirm('Are you sure you want to approve this request?');">
                                    <i class="bi bi-check-circle"></i> Approve Request
                                </button>
                            </form>
                            
                            <form asp-action="UpdateStatus" asp-route-id="@Model.Id" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="status" value="Rejected" />
                                <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to reject this request?');">
                                    <i class="bi bi-x-circle"></i> Reject Request
                                </button>
                            </form>
                        }
                        
                        @if (isPropertyOwner || User.IsInRole("Admin"))
                        {
                            <a asp-controller="Messages" asp-action="Create" asp-route-toEmail="@Model.User?.Email" class="btn btn-outline-primary">
                                <i class="bi bi-envelope"></i> Contact Requester
                            </a>
                        }
                        
                        @if (isRequester || User.IsInRole("Admin"))
                        {
                            @if (isRequester && Model.Property?.Owner != null)
                            {
                                <a asp-controller="Messages" asp-action="Create" asp-route-toEmail="@Model.Property.Owner.Email" class="btn btn-outline-primary">
                                    <i class="bi bi-envelope"></i> Contact Owner
                                </a>
                            }
                            
                            <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-outline-danger" onclick="return confirm('Are you sure you want to delete this request?');">
                                    <i class="bi bi-trash"></i> Delete Request
                                </button>
                            </form>
                        }
                        
                        <a asp-action="Index" class="btn btn-outline-secondary ms-auto">
                            <i class="bi bi-arrow-left"></i> Back to Requests
                        </a>
                    </div>

                    <!-- Status Update History -->
                    @if (Model.Status != "Pending")
                    {
                        <div class="alert alert-@(Model.Status == "Approved" ? "success" : "danger") mt-4" role="alert">
                            <i class="bi bi-info-circle"></i>
                            <strong>This request has been @Model.Status.ToLower().</strong>
                            @if (isPropertyOwner)
                            {
                                <text>You can still contact the requester using the button above.</text>
                            }
                            else
                            {
                                <text>You can contact the property owner for more information.</text>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
