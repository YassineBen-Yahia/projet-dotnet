@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager

<header class="header">
    <div class="container">
        <div class="header-content">
            <a class="logo" asp-area="" asp-controller="Home" asp-action="Index">
                <i class="bi bi-house-heart"></i> Landmark
            </a>
            
            <nav class="nav-desktop">
                <a asp-controller="Home" asp-action="Index" 
                   class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Home" && ViewContext.RouteData.Values["Action"]?.ToString() == "Index" ? "active" : "")">
                    <i class="bi bi-house"></i> Home
                </a>
                @if (User?.Identity?.IsAuthenticated == true)
                {
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-controller="Admin" asp-action="Index" 
                           class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Admin" && ViewContext.RouteData.Values["Action"]?.ToString() == "Index" ? "active" : "")">
                            <i class="bi bi-speedometer2"></i> Admin
                        </a>
                        <a asp-controller="Admin" asp-action="Statistics" 
                           class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Admin" && ViewContext.RouteData.Values["Action"]?.ToString() == "Statistics" ? "active" : "")">
                            <i class="bi bi-graph-up"></i> Statistics
                        </a>
                    }
                    <a asp-controller="Properties" asp-action="Index" 
                       class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Properties" ? "active" : "")">
                        <i class="bi bi-wallet2"></i> Properties
                    </a>
                    <a asp-controller="Requests" asp-action="Index" 
                       class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Requests" ? "active" : "")">
                        <i class="bi bi-clipboard-check"></i> Requests
                    </a>
                    <a asp-controller="Messages" asp-action="Index" 
                       class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Messages" ? "active" : "")">
                        <i class="bi bi-envelope"></i> Messages
                    </a>
                }
                else
                {
                    <a href="/#about" class="nav-link" data-section="about">
                        <i class="bi bi-info-circle"></i> About Us
                    </a>
                    <a asp-controller="Properties" asp-action="Index" class="nav-link">
                        <i class="bi bi-wallet2"></i> Properties
                    </a>
                    <a href="/#why-choose" class="nav-link" data-section="why-choose">
                        <i class="bi bi-star"></i> Why Choose Us?
                    </a>
                    <a href="/#contact" class="nav-link" data-section="contact">
                        <i class="bi bi-envelope-at"></i> Contact Us
                    </a>
                }
            </nav>

            <div class="header-auth">
                @if (User?.Identity?.IsAuthenticated == true)
                {
                    var user = await UserManager.GetUserAsync(User);
                    var initials = "";
                    if (user != null)
                    {
                        if (!string.IsNullOrEmpty(user.FirstName)) initials += user.FirstName.Substring(0, 1);
                        if (!string.IsNullOrEmpty(user.LastName)) initials += user.LastName.Substring(0, 1);
                    }
                    
                    if (string.IsNullOrEmpty(initials) && !string.IsNullOrEmpty(User.Identity.Name))
                    {
                        initials = User.Identity.Name.Substring(0, 1);
                    }
                    initials = initials.ToUpper();
                    
                    <div class="user-dropdown">
                        <button class="user-dropdown-toggle d-flex align-items-center gap-2" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false" style="background: none; border: none; padding: 0.25rem 0.5rem; transition: background-color 0.3s; border-radius: var(--radius);">
                            <div class="user-initials" style="width: 40px; height: 40px; background-color: var(--primary); color: white; border-radius: 50%; display: flex; align-items: center; justify-content: center; font-weight: 600; font-size: 1rem; box-shadow: 0 2px 5px rgba(0,0,0,0.2);">
                                @initials
                            </div>
                            <i class="bi bi-chevron-down" style="font-size: 0.8rem; color: var(--text-light);"></i>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end modern-dropdown shadow-lg border-0" aria-labelledby="userDropdown">
                            <li class="dropdown-user-info px-4 py-3 border-bottom d-flex align-items-center gap-3">
                                <div class="user-initials-lg" style="width: 48px; height: 48px; background-color: var(--primary); color: white; border-radius: 50%; display: flex; align-items: center; justify-content: center; font-weight: 700; font-size: 1.25rem; box-shadow: 0 4px 6px rgba(0,0,0,0.1);">
                                    @initials
                                </div>
                                <div>
                                    <span class="d-block fw-bold text-dark">@(user?.FirstName) @(user?.LastName)</span>
                                    <span class="text-muted small">@User.Identity.Name</span>
                                </div>
                            </li>
                            <li>
                                <a class="dropdown-item py-2 px-4" asp-controller="Account" asp-action="Index">
                                    <i class="bi bi-person-badge me-2 text-primary"></i> My Profile
                                </a>
                            </li>
                            <li><hr class="dropdown-divider mx-4"></li>
                            <li>
                                <form asp-controller="Account" asp-action="Logout" method="post" class="px-2">
                                    <button type="submit" class="dropdown-item py-2 px-4 text-danger rounded">
                                        <i class="bi bi-box-arrow-right me-2"></i> Logout
                                    </button>
                                </form>
                            </li>
                        </ul>
                    </div>
                }
                else
                {
                    <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Account" && ViewContext.RouteData.Values["Action"]?.ToString() == "Login" ? "active" : "")" 
                       asp-controller="Account" asp-action="Login">
                        <i class="bi bi-box-arrow-in-right"></i> Login
                    </a>
                    <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Account" && ViewContext.RouteData.Values["Action"]?.ToString() == "Register" ? "active" : "")" 
                       asp-controller="Account" asp-action="Register">
                        <i class="bi bi-person-plus"></i> Register
                    </a>
                }
            </div>
        </div>
    </div>
</header>
