<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Real Estate Platform</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/WebApplication4.styles.css" asp-append-version="true"/>
</head>
<body>
<header class="header">
    <div class="container">
        <div class="header-content">
            <a class="logo" asp-area="" asp-controller="Home" asp-action="Index">
                <i class="bi bi-house-heart"></i> Landmark
            </a>
            
            <nav class="nav-desktop">
                <a asp-controller="Home" asp-action="Index" 
                   class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Home" && ViewContext.RouteData.Values["Action"]?.ToString() == "Index" ? "active" : "")">
                    <i class="bi bi-house"></i> Home
                </a>
                @if (User?.Identity?.IsAuthenticated == true)
                {
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-controller="Admin" asp-action="Index" 
                           class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Admin" && ViewContext.RouteData.Values["Action"]?.ToString() == "Index" ? "active" : "")">
                            <i class="bi bi-speedometer2"></i> Admin
                        </a>
                        <a asp-controller="Admin" asp-action="Statistics" 
                           class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Admin" && ViewContext.RouteData.Values["Action"]?.ToString() == "Statistics" ? "active" : "")">
                            <i class="bi bi-graph-up"></i> Statistics
                        </a>
                    }
                    <a asp-controller="Properties" asp-action="Index" 
                       class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Properties" ? "active" : "")">
                        <i class="bi bi-wallet2"></i> Properties
                    </a>
                    <a asp-controller="Requests" asp-action="Index" 
                       class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Requests" ? "active" : "")">
                        <i class="bi bi-clipboard-check"></i> Requests
                    </a>
                    <a asp-controller="Messages" asp-action="Index" 
                       class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Messages" ? "active" : "")">
                        <i class="bi bi-envelope"></i> Messages
                    </a>
                }
                else
                {
                    <a href="#about" class="nav-link" data-section="about">
                        <i class="bi bi-info-circle"></i> About Us
                    </a>
                    <a asp-controller="Properties" asp-action="Index" class="nav-link">
                        <i class="bi bi-wallet2"></i> Properties
                    </a>
                    <a href="#why-choose" class="nav-link" data-section="why-choose">
                        <i class="bi bi-star"></i> Why Choose Us?
                    </a>
                    <a href="#contact" class="nav-link" data-section="contact">
                        <i class="bi bi-envelope-at"></i> Contact Us
                    </a>
                }
            </nav>

            <div class="header-auth">
                @if (User?.Identity?.IsAuthenticated == true)
                {
                    <div class="user-dropdown">
                        <button class="user-dropdown-toggle" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-person-circle"></i> @User.Identity.Name
                            <i class="bi bi-chevron-down ms-1"></i>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end modern-dropdown shadow-lg border-0" aria-labelledby="userDropdown">
                            <li class="dropdown-user-info px-4 py-3 border-bottom">
                                <span class="d-block fw-bold text-dark">@User.Identity.Name</span>
                                <span class="text-muted small">@User.FindFirst(System.Security.Claims.ClaimTypes.Email)?.Value</span>
                            </li>
                            <li>
                                <a class="dropdown-item py-2 px-4" asp-controller="Account" asp-action="Index">
                                    <i class="bi bi-person-badge me-2 text-primary"></i> My Profile
                                </a>
                            </li>
                            <li><hr class="dropdown-divider mx-4"></li>
                            <li>
                                <form asp-controller="Account" asp-action="Logout" method="post" class="px-2">
                                    <button type="submit" class="dropdown-item py-2 px-4 text-danger rounded">
                                        <i class="bi bi-box-arrow-right me-2"></i> Logout
                                    </button>
                                </form>
                            </li>
                        </ul>
                    </div>
                }
                else
                {
                    <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Account" && ViewContext.RouteData.Values["Action"]?.ToString() == "Login" ? "active" : "")" 
                       asp-controller="Account" asp-action="Login">
                        <i class="bi bi-box-arrow-in-right"></i> Login
                    </a>
                    <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Account" && ViewContext.RouteData.Values["Action"]?.ToString() == "Register" ? "active" : "")" 
                       asp-controller="Account" asp-action="Register">
                        <i class="bi bi-person-plus"></i> Register
                    </a>
                }
            </div>
        </div>
    </div>
</header>
<div class="container">
    <main role="main" class="pb-3">
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="bi bi-check-circle"></i> @TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="bi bi-exclamation-triangle"></i> @TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        @RenderBody()
    </main>
</div>
<footer class="site-footer">
    <div class="container py-5">
        <div class="row g-4">
            <div class="col-lg-4">
                <a class="footer-logo mb-3 d-inline-block" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-house-heart"></i> Landmark
                </a>
                <p class="text-white-50 small mb-4">
                    Your trusted partner in finding the perfect place to call home. Modern solutions for modern living.
                </p>
                <div class="d-flex gap-3">
                    <a href="#" class="text-white"><i class="bi bi-facebook"></i></a>
                    <a href="#" class="text-white"><i class="bi bi-instagram"></i></a>
                    <a href="#" class="text-white"><i class="bi bi-twitter-x"></i></a>
                </div>
            </div>
            <div class="col-lg-2 col-md-4">
                <h6 class="text-white fw-bold mb-3">Quick Links</h6>
                <ul class="list-unstyled footer-links">
                    <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li><a asp-controller="Properties" asp-action="Index">Properties</a></li>
                    <li><a href="#about">About Us</a></li>
                    <li><a href="#contact">Contact</a></li>
                </ul>
            </div>
            <div class="col-lg-2 col-md-4">
                <h6 class="text-white fw-bold mb-3">Member Area</h6>
                <ul class="list-unstyled footer-links">
                    <li><a asp-controller="Requests" asp-action="Index">My Requests</a></li>
                    <li><a asp-controller="Messages" asp-action="Index">My Messages</a></li>
                    @if (User.IsInRole("Admin"))
                    {
                        <li><a asp-controller="Admin" asp-action="Index">Dashboard</a></li>
                    }
                </ul>
            </div>
            <div class="col-lg-4 col-md-4">
                <h6 class="text-white fw-bold mb-3">Contact Us</h6>
                <ul class="list-unstyled text-white-50 small">
                    <li class="mb-2"><i class="bi bi-geo-alt me-2"></i> 123 Real Estate Ave, Suite 100</li>
                    <li class="mb-2"><i class="bi bi-telephone me-2"></i> +1 (234) 567-890</li>
                    <li class="mb-2"><i class="bi bi-envelope me-2"></i> contact@landmark.com</li>
                </ul>
            </div>
        </div>
        <hr class="mt-5 border-white-50">
        <div class="text-center pt-3 text-white-50 small">
            &copy; 2026 Landmark Real Estate. All rights reserved.
        </div>
    </div>
</footer>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>