<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Real Estate Platform</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/WebApplication4.styles.css" asp-append-version="true"/>
</head>
<body>
<header class="header">
    <div class="container">
        <div class="header-content">
            <a class="logo" asp-area="" asp-controller="Home" asp-action="Index">
                <i class="bi bi-house-heart"></i> Landmark
            </a>
            
            <nav class="nav-desktop">
                @if (User?.Identity?.IsAuthenticated == true)
                {
                    <a asp-controller="Properties" asp-action="Index" 
                       class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Properties" ? "active" : "")">
                        <i class="bi bi-house-door"></i> Properties
                    </a>
                    <a asp-controller="Requests" asp-action="Index" 
                       class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Requests" ? "active" : "")">
                        <i class="bi bi-clipboard-check"></i> Requests
                    </a>
                    <a asp-controller="Messages" asp-action="Index" 
                       class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Messages" ? "active" : "")">
                        <i class="bi bi-envelope"></i> Messages
                    </a>
                }
                else
                {
                    <a href="#about" class="nav-link" data-section="about">
                        <i class="bi bi-info-circle"></i> About Us
                    </a>
                    <a href="#properties" class="nav-link" data-section="properties">
                        <i class="bi bi-buildings"></i> Properties
                    </a>
                    <a href="#why-choose" class="nav-link" data-section="why-choose">
                        <i class="bi bi-star"></i> Why Choose Us?
                    </a>
                    <a href="#contact" class="nav-link" data-section="contact">
                        <i class="bi bi-envelope-at"></i> Contact Us
                    </a>
                }
            </nav>

            <div class="header-auth">
                @if (User?.Identity?.IsAuthenticated == true)
                {
                    <div class="user-dropdown">
                        <button class="user-dropdown-toggle" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-person-circle"></i> @User.Identity.Name
                            <i class="bi bi-chevron-down ms-1"></i>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                            <li>
                                <a class="dropdown-item @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Account" && ViewContext.RouteData.Values["Action"]?.ToString() == "Index" ? "active" : "")" 
                                   asp-controller="Account" asp-action="Index">
                                    <i class="bi bi-person"></i> My Profile
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Properties" ? "active" : "")" 
                                   asp-controller="Properties" asp-action="Index">
                                    <i class="bi bi-house-door"></i> My Properties
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Requests" ? "active" : "")" 
                                   asp-controller="Requests" asp-action="Index">
                                    <i class="bi bi-clipboard"></i> My Requests
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Messages" ? "active" : "")" 
                                   asp-controller="Messages" asp-action="Index">
                                    <i class="bi bi-envelope"></i> My Messages
                                </a>
                            </li>
                            @if (User.IsInRole("Admin"))
                            {
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <a class="dropdown-item @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Admin" ? "active" : "")" 
                                       asp-controller="Admin" asp-action="Index">
                                        <i class="bi bi-speedometer2"></i> Admin Dashboard
                                    </a>
                                </li>
                            }
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <form asp-controller="Account" asp-action="Logout" method="post" class="px-3 py-1">
                                    <button type="submit" class="btn btn-link dropdown-item p-0 text-start">
                                        <i class="bi bi-box-arrow-right"></i> Logout
                                    </button>
                                </form>
                            </li>
                        </ul>
                    </div>
                }
                else
                {
                    <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Account" && ViewContext.RouteData.Values["Action"]?.ToString() == "Login" ? "active" : "")" 
                       asp-controller="Account" asp-action="Login">
                        <i class="bi bi-box-arrow-in-right"></i> Login
                    </a>
                    <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Account" && ViewContext.RouteData.Values["Action"]?.ToString() == "Register" ? "active" : "")" 
                       asp-controller="Account" asp-action="Register">
                        <i class="bi bi-person-plus"></i> Register
                    </a>
                }
            </div>
        </div>
    </div>
</header>
<div class="container">
    <main role="main" class="pb-3">
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="bi bi-check-circle"></i> @TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="bi bi-exclamation-triangle"></i> @TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        @RenderBody()
    </main>
</div>
