@model WebApplication4.Models.Property
@{
    ViewData["Title"] = Model.Title;
}

<div class="container mt-4">
    <div class="row">
        <!-- Property Images Section -->
        <div class="col-md-8">
            @if (Model.Images != null && Model.Images.Any())
            {
                <div id="propertyCarousel" class="carousel slide mb-4" data-bs-ride="carousel">
                    <div class="carousel-indicators">
                        @for (int i = 0; i < Model.Images.Count; i++)
                        {
                            <button type="button" data-bs-target="#propertyCarousel" data-bs-slide-to="@i" class="@(i == 0 ? "active" : "")" aria-current="@(i == 0 ? "true" : "false")" aria-label="Slide @(i + 1)"></button>
                        }
                    </div>
                    <div class="carousel-inner">
                        @for (int i = 0; i < Model.Images.Count; i++)
                        {
                            <div class="carousel-item @(i == 0 ? "active" : "")">
                                <img src="@Model.Images[i].Url" class="d-block w-100" alt="@Model.Title" style="height: 500px; object-fit: cover;">
                            </div>
                        }
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#propertyCarousel" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#propertyCarousel" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            }
            else
            {
                <div class="bg-secondary text-white d-flex align-items-center justify-content-center mb-4" style="height: 500px;">
                    <div class="text-center">
                        <i class="bi bi-house-door" style="font-size: 5rem;"></i>
                        <p class="mt-3">No images available</p>
                    </div>
                </div>
            }

            <!-- Property Description -->
            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <h4 class="card-title mb-3">Description</h4>
                    <p class="text-muted">@(Model.Description ?? "No description available.")</p>
                </div>
            </div>

            <!-- Property Features -->
            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <h4 class="card-title mb-3">Property Features</h4>
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <div class="d-flex align-items-center">
                                <i class="bi bi-door-closed text-primary me-2" style="font-size: 1.5rem;"></i>
                                <div>
                                    <strong>@Model.Bedrooms</strong><br/>
                                    <small class="text-muted">Bedrooms</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <div class="d-flex align-items-center">
                                <i class="bi bi-droplet text-primary me-2" style="font-size: 1.5rem;"></i>
                                <div>
                                    <strong>@Model.Bathrooms</strong><br/>
                                    <small class="text-muted">Bathrooms</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <div class="d-flex align-items-center">
                                <i class="bi bi-rulers text-primary me-2" style="font-size: 1.5rem;"></i>
                                <div>
                                    <strong>@Model.Area</strong><br/>
                                    <small class="text-muted">sq ft</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Sidebar: Price, Status, Actions -->
        <div class="col-md-4">
            <div class="card shadow-sm sticky-top" style="top: 20px;">
                <div class="card-body">
                    <h2 class="text-primary mb-3">@Model.Price.ToString("C")</h2>
                    
                    <h5 class="mb-3">@Model.Title</h5>
                    
                    <p class="text-muted mb-3">
                        <i class="bi bi-geo-alt"></i> @(Model.Address ?? "Location not specified")
                    </p>

                    <div class="mb-3">
                        <span class="badge bg-info fs-6">@Model.Status</span>
                    </div>

                    <hr />

                    <!-- Owner Information -->
                    @if (Model.Owner != null)
                    {
                        <div class="mb-4">
                            <h6 class="text-muted mb-2">Property Owner</h6>
                            <div class="d-flex align-items-center mb-2">
                                <div class="bg-primary text-white rounded-circle d-inline-flex align-items-center justify-content-center me-2" style="width: 40px; height: 40px;">
                                    @(Model.Owner.FirstName?.Substring(0, 1))@(Model.Owner.LastName?.Substring(0, 1))
                                </div>
                                <div>
                                    <strong>@Model.Owner.FirstName @Model.Owner.LastName</strong><br/>
                                    <small class="text-muted">@Model.Owner.Email</small>
                                </div>
                            </div>
                        </div>
                    }

                    <hr />

                    <!-- Action Buttons -->
                    @if (User?.Identity?.IsAuthenticated == true)
                    {
                        var currentUserId = User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;
                        var isOwner = Model.OwnerId == currentUserId;

                        @if (!isOwner)
                        {
                            <div class="d-grid gap-2">
                                <a class="btn btn-primary btn-lg" asp-controller="Requests" asp-action="Create" asp-route-propertyId="@Model.Id">
                                    <i class="bi bi-calendar-check"></i> Request Visit
                                </a>
                                
                                @if (Model.Owner != null)
                                {
                                    <a class="btn btn-outline-primary" asp-controller="Messages" asp-action="Create" asp-route-toEmail="@Model.Owner.Email">
                                        <i class="bi bi-envelope"></i> Contact Owner
                                    </a>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-info">
                                <i class="bi bi-info-circle"></i> This is your property
                            </div>
                            <div class="d-grid gap-2">
                                <a class="btn btn-warning" asp-controller="Properties" asp-action="Edit" asp-route-id="@Model.Id">
                                    <i class="bi bi-pencil"></i> Edit Property
                                </a>
                                <form asp-controller="Properties" asp-action="Delete" asp-route-id="@Model.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this property?');">
                                    <button type="submit" class="btn btn-danger w-100">
                                        <i class="bi bi-trash"></i> Delete Property
                                    </button>
                                </form>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="d-grid gap-2">
                            <a class="btn btn-primary btn-lg" asp-controller="Account" asp-action="Login">
                                <i class="bi bi-box-arrow-in-right"></i> Login to Contact
                            </a>
                        </div>
                    }

                    <hr class="mt-4" />

                    <div class="d-grid">
                        <a class="btn btn-outline-secondary" asp-controller="Properties" asp-action="Index">
                            <i class="bi bi-arrow-left"></i> Back to Properties
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
