@model IEnumerable<WebApplication4.Models.Property>
@{
    ViewData["Title"] = "Properties";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Properties</h2>
    @if (User?.Identity?.IsAuthenticated == true && (User.IsInRole("Admin") || User.IsInRole("Agent")))
    {
        <a class="btn btn-primary" asp-action="Create">
            <i class="bi bi-plus-circle"></i> New Property
        </a>
    }
</div>

<div class="row">
    @foreach (var p in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                @if (p.Images != null && p.Images.Any())
                {
                    <img src="@p.Images.First().Url" class="card-img-top" alt="@p.Title" style="height: 250px; object-fit: cover;" />
                }
                else
                {
                    <div class="card-img-top bg-secondary d-flex align-items-center justify-content-center text-white" style="height: 250px;">
                        <div class="text-center">
                            <i class="bi bi-house-door" style="font-size: 3rem;"></i>
                            <p class="mb-0">No Image</p>
                        </div>
                    </div>
                }
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@p.Title</h5>
                    <p class="text-muted mb-2">
                        <i class="bi bi-geo-alt"></i> @(p.Address ?? "Location not specified")
                    </p>
                    @if (!string.IsNullOrEmpty(p.Description))
                    {
                        <p class="card-text text-secondary small">
                            @(p.Description.Length > 100 ? p.Description.Substring(0, 100) + "..." : p.Description)
                        </p>
                    }
                    <div class="mt-auto">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <span class="badge bg-info">@p.Status</span>
                            <span class="fw-bold text-primary fs-5">@p.Price.ToString("C")</span>
                        </div>
                        <div class="row text-center mb-3 small text-muted">
                            <div class="col-4">
                                <i class="bi bi-door-closed"></i> @p.Bedrooms BD
                            </div>
                            <div class="col-4">
                                <i class="bi bi-droplet"></i> @p.Bathrooms BA
                            </div>
                            <div class="col-4">
                                <i class="bi bi-rulers"></i> @p.Area sq ft
                            </div>
                        </div>
                        <div class="d-grid gap-2">
                            <a class="btn btn-primary btn-sm" asp-action="Details" asp-route-id="@p.Id">
                                <i class="bi bi-eye"></i> View Details
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@if (!Model.Any())
{
    <div class="alert alert-info text-center" role="alert">
        <i class="bi bi-info-circle"></i> No properties available at the moment.
        @if (User?.Identity?.IsAuthenticated == true)
        {
            <a asp-action="Create" class="alert-link">Create the first property</a>
        }
    </div>
}
