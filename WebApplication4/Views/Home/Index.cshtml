<!-- Dual Value Propositions -->
<section class="value-propositions" id="about">
    <div class="why-content">
        <h2 class="section-title">About Us</h2>
    </div>
    <div class="container">
        <div class="value-grid">
            <!-- Client Value Prop -->
            <div class="value-card">
                <div class="value-icon client-icon">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
                        <circle cx="12" cy="10" r="3"></circle>
                    </svg>
                </div>
                <h3 class="value-title">For Buyers & Sellers</h3>
                <p class="value-description">Browse thousands of properties, connect with property owners, and complete your real estate journey with confidence.</p>
                <ul class="value-features">
                    <li>Advanced property search filters</li>
                    <li>Connect with verified owners</li>
                    <li>Schedule tours instantly</li>
                    <li>Track your applications</li>
                </ul>
                <!--
                <button class="btn btn-outline-primary btn-full">
                    Browse Properties
                    <svg class="btn-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <polyline points="9 18 15 12 9 6"></polyline>
                    </svg>
                </button>
                -->
            </div>

            <!-- Property Owner Value Prop -->
            <div class="value-card">
                <div class="value-icon agent-icon">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                        <circle cx="12" cy="7" r="4"></circle>
                    </svg>
                </div>
                <h3 class="value-title">For Property Owners</h3>
                <p class="value-description">List your properties with powerful tools, manage client inquiries, and close deals faster.</p>
                <ul class="value-features">
                    <li>List properties in minutes</li>
                    <li>Professional property showcase</li>
                    <li>Lead management dashboard</li>
                    <li>Client communication tools</li>
                </ul>
                <!--
                <button class="btn btn-outline-primary btn-full">
                    Grow Your Business
                    <svg class="btn-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <polyline points="9 18 15 12 9 6"></polyline>
                    </svg>
                </button>
                -->
            </div>
        </div>
    </div>
</section>
<section class="featured-properties" id="properties">
    <div class="container">
        <div class="section-header">
            <h2 class="section-title">Featured Properties</h2>
            <p class="section-subtitle">Handpicked homes that offer exceptional value and lifestyle opportunities</p>
        </div>

        <div class="properties-grid">
            @foreach (var p in Model)
            {
                <div class="property-card">
                    <div class="property-image">
                        @if (p.Images != null && p.Images.Any())
                        {
                            <img src="@p.Images.First().Url" alt="@p.Title" style="width: 100%; height: 100%; object-fit: cover;" />
                        }
                        else
                        {
                            <div class="property-placeholder">
                                <svg viewBox="0 0 400 300" preserveAspectRatio="xMidYMid slice">
                                    <rect width="400" height="300" fill="#e8dcc8" />
                                    <circle cx="200" cy="150" r="80" fill="#c9a068" opacity="0.3" />
                                    <rect x="100" y="80" width="200" height="180" fill="none" stroke="#8b6f47" stroke-width="2" />
                                </svg>
                            </div>
                        }
                        <span class="property-badge">@p.Status</span>
                    </div>
                    <div class="property-content">
                        <h3 class="property-title">@p.Title</h3>
                        <div class="property-location">
                            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
                                <circle cx="12" cy="10" r="3"></circle>
                            </svg>
                            <span>@(p.Address ?? "Location not specified")</span>
                        </div>
                        @if (!string.IsNullOrEmpty(p.Description))
                        {
                            <p class="property-description">
                                @(p.Description.Length > 80 ? p.Description.Substring(0, 80) + "..." : p.Description)
                            </p>
                        }
                        <div class="property-divider"></div>
                        <p class="property-price">@p.Price.ToString("C")</p>
                        <div class="property-specs">
                            <span>@p.Bedrooms Bedrooms</span>
                            <span>@p.Bathrooms Bathrooms</span>
                            @if (p.Area > 0)
                            {
                                <span>@p.Area sq ft</span>
                            }
                        </div>
                        <a class="btn btn-outline-primary btn-full" asp-action="Details" asp-controller="properties" asp-route-id="@p.Id">
                            View Details
                            <svg class="btn-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <polyline points="9 18 15 12 9 6"></polyline>
                            </svg>
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

